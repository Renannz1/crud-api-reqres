<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Lista de Usuários</h1>
        <a href="/usuario/form" class="btn btn-success shadow-sm"><i class="bi bi-plus-circle"></i> Criar Usuário</a>
    </div>
    <div class="row">
        {{#each users}}
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <img src="{{avatar}}" alt="Avatar" class="rounded-circle mb-3" width="100">
                    <h5 class="fw-bold">{{first_name}} {{last_name}}</h5>
                    <p class="text-muted">{{email}}</p>
                    <a href="/usuarios/{{id}}" class="btn btn-outline-primary btn-sm">Ver detalhes</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>